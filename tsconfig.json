{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist/umd/",
    "target": "es2016",
    "lib": ["ESNext", "dom"],
    "rootDir": "./src/",
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": false
  },
  "include": ["src"]
}
